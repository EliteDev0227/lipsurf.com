{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "types": [
      "./src/@types",
      "stripe-checkout",
      "@lipsurf/types",
      "webpack-env",
      "vuetify"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "incremental": true,
    "noEmitOnError": true,
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}